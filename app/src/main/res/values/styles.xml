<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/bgWhite</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MessageTextStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MessageTextDark" parent="MessageTextStart">
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="Subtitles">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Inputs">
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/transaction_inputs</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtomWhite">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPurple</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- custom dialog activity theme -->
    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_87_text</item>
        <item name="android:textColorLink">@color/gray_87_text</item>
    </style>

    <style name="fab_text_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- wall of coins -->
    <style name="My.Widget.Button.Borderless.Small" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="BuyDashBaseActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SellingBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="StyleInstrucText">
        <item name="android:textColor">@color/instruct_text_color</item>
        <item name="android:textSize">@dimen/text_size_instruct</item>
    </style>

    <style name="StyleEdit">
        <item name="android:textColor">@color/edt_text_color</item>
        <item name="android:textSize">@dimen/text_size_edt</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/border_selling_edttxt</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="StyleEditNoBorder">
        <item name="android:textColor">@color/edt_text_color</item>
        <item name="android:textSize">@dimen/text_size_edt</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="StyleButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_selling_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleHeader">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_top_msg</item>
    </style>

    <style name="StyleTextLabel">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>
</resources>
