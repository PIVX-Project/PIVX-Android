<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_msg"
        style="@style/StyleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/type_a_secure_password_to_continue_using_wall_of_coins" />

    <TextView
        android:id="@+id/text_mobile_label"
        style="@style/StyleTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_msg"
        android:layout_marginTop="20dp"
        android:text="@string/mobile" />

    <EditText
        android:id="@+id/edit_mobile"
        style="@style/StyleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mobile_label"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:inputType="number" />


    <TextView
        android:id="@+id/text_pass_label"
        style="@style/StyleTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_mobile"
        android:layout_marginTop="20dp"
        android:text="@string/new_password" />

    <EditText
        android:id="@+id/edit_new_password"
        style="@style/StyleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_pass_label"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:hint="@string/new_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/text_confirm_password_label"
        style="@style/StyleTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_new_password"
        android:layout_marginTop="20dp"
        android:text="@string/confirm_new_password" />

    <EditText
        android:id="@+id/edit_confirm_new_password"
        style="@style/StyleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_confirm_password_label"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:hint="@string/confirm_new_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_set_password"
        style="@style/StyleButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:text="@string/action_set_password"
        android:textAllCaps="false"
        android:visibility="visible" />
</RelativeLayout>