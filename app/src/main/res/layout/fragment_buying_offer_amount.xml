<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutToolbar"
        layout="@layout/partial_buying_top"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_create_hold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutToolbar"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_requested_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/buy_pivx_coins_amount_lable"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_currency"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:visibility="gone">

            <pivx.org.pivxwallet.wallofcoins.ui.CurrencyAmountView
                android:id="@+id/request_coins_amount_btc"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/request_coins_amount_btc_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:textSize="@dimen/font_size_large"
                    tools:ignore="TextFields">

                    <requestFocus />
                </EditText>
            </pivx.org.pivxwallet.wallofcoins.ui.CurrencyAmountView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/or"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <pivx.org.pivxwallet.wallofcoins.ui.CurrencyAmountView
                android:id="@+id/request_coins_amount_local"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/request_coins_amount_local_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:textSize="@dimen/font_size_large"
                    tools:ignore="TextFields" />
            </pivx.org.pivxwallet.wallofcoins.ui.CurrencyAmountView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtViewDolar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/bgBlackX"
                    android:textSize="@dimen/font_size_large" />

                <EditText
                    android:id="@+id/edtViewDollar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="7"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_large" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/to_acquire_bitcoin_n_1_000_000_bits_1_pivx"
                android:textColor="@color/bgBlackX"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_get_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/get_offers"
            android:textStyle="bold" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_offers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutToolbar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfbfb"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>