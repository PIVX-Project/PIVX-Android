<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/secureMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/security_message"
        style="@style/MessageTextDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/words_container"
        android:layout_below="@id/secureMessage">

        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:id="@+id/securityWords"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@color/transparent">


        </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_continue_btn"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_below="@+id/words_container"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignParentStart="true">





    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_continue"
            android:text="@string/btn_next"
            style="@style/ButtonPrimary" />

    </LinearLayout>

</RelativeLayout>
